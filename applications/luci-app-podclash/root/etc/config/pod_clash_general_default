config clash 'general'
	option mode 'rule'                # rule / global / direct / script
	option redir_port '7892'          # port of TProxy 
	option allow_lan 'true'          # allow other devices access
	option port '7890'                # port of HTTP
	option socks_port '7891'          # port of SOCKS5
	option mixed_port '7893'          # port of HTTP&SOCKS5
	list authentication 'user1:pass1' # authentication of local SOCKS5/HTTP(S) server
	list authentication 'user2:pass2'
	option external_controller '0.0.0.0:9090'
	option secret 'podclash'
	option log_level 'info'           # silent / error / warning / info / debug

config clash 'dns'
	# option enable 'true'            # set true to enable dns
	option enhanced_mode 'redir-host' # or fake-ip
	option use_hosts 'true'
	option ipv6 'false'
	# option listen '0.0.0.0:53'
	list default_nameserver '114.114.114.114' # resolve dns nameserver host, should fill pure IP aka Bootstrap DNS, 用于解析TLS/DOT/DOH服务器域名
	list default_nameserver '8.8.8.8'

	option fake_ip_range '198.18.0.1/16'
	list fake_ip_filter '*.lan'               # fake ip white domain list, aka Always Real IP
	list fake_ip_filter 'localhost.ptlogin2.qq.com'

	list nameserver '114.114.114.114'
	list nameserver '223.5.5.5'
	list fallback 'tls://dns.google'
	list fallback 'https://cloudflare-dns.com/dns-query'
	list fallback 'tls://1.1.1.1:853'             # concurrent request with nameserver, fallback used when GEOIP country isn't CN
	option fallback_filter_geoip 'true'
	list fallback_filter_ipcidr '240.0.0.0/4' # ips in these subnets will be considered polluted
